{
  "compilerOptions": {
    "outDir": "es",
    "module": "ES2022",
    "target": "ES2022",
    "allowJs": true,
    "esModuleInterop": true,
    "newLine": "lf",
    "moduleResolution": "Node16",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "baseUrl": "",
    "declaration": true
  },
  "include": [
    "src/**/*",
    ".eslintrc.cjs"
  ]
}